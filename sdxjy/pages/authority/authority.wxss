.authority{
  display: flex;
  align-items: center;
  position: absolute;
  width: 100%;
  height: 100%;
}
.authorize-con{
  width: 500rpx;
  height: 400rpx;
  text-align: center;
  position: absolute;
  top:50%;
  margin-top: -200rpx;
  left: 125rpx;
}
.authorize-con .desc{
  font-size: 28rpx;
  line-height: 45rpx;
  color:#b5b5b5;
}
.authorize-con button{
  margin-top: 100rpx;
  width: 270rpx;
  font-size: 28rpx;
  height: 70rpx;
  line-height: 70rpx;
  border-radius: 60rpx;
  box-shadow: 0rpx 0rpx 10rpx #ffb800;
}