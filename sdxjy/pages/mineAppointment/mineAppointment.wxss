/* pages/mineAppointment/mineAppointment.wxss */
swiper{
  position: fixed;
  width: 100%;
  top:70rpx;
}
scroll-view{
  height: 100%;
}
.top-head{
  height: 70rpx;
  line-height: 70rpx;
  justify-content: center;
  background: #fff;
  position: fixed;
  top:0rpx;
  width: 100%;
}
.tab-btnname{
  position: relative;
  padding: 0 43rpx;
  font-size: 28rpx;
	font-weight: normal;
	font-stretch: normal;
	letter-spacing: 0px;
	color: #7f8389;
  text-align: center;
  box-sizing: content-box;
}
.tab-btnname.active{
  color: #ffb800;
}
.tab-btnname.active::after{
  content:'';
  position: absolute;
  bottom:0rpx;
  width: 120rpx;
	height: 1rpx;
  left: 50%;
  margin-left: -60rpx;
  background:#ffb800;
  border-radius: 4rpx;
	border: solid 3rpx #ffb800;
  box-sizing: border-box;
}
.list{
  margin-top: 12rpx;
  background: #fff;
  padding-bottom: 20rpx;
}
.top-center{
 padding: 39rpx 38rpx 0 47rpx;
 align-items: flex-start;
}
.left image{
  width: 104rpx;
  height: 104rpx;
  overflow: hidden;
  border-radius: 50%;
  display: block;
}
.tip{
  padding: 0 5rpx;
  height: 33rpx;
	background-image: linear-gradient(90deg, 
		#8ab2ff 0%, 
		#5fcaff 100%);
	border-radius: 4rpx;
  line-height: 33rpx;
  text-align: center;
  font-size: 22rpx;
	font-weight: normal;
	font-stretch: normal;
	letter-spacing: 0px;
	color: #ffffff;
  margin-top: 14rpx;
}
.content{
  padding-top: 16rpx;
  flex-grow: 1;
  padding-left: 80rpx;
}
.content .name{
  font-size: 32rpx;
  line-height: 40rpx;
  margin-bottom: 10rpx;
	font-weight: normal;
	font-stretch: normal;
	letter-spacing: 0px;
	color: #000000;
}
.content .desc{
  font-size: 28rpx;
  line-height: 40rpx;
	font-weight: normal;
	font-stretch: normal;
	letter-spacing: 0px;
	color: #555555;
  margin-bottom: 4rpx;
}
.content .type{
  font-size: 28rpx;
  line-height: 40rpx;
	font-weight: normal;
	font-stretch: normal;
	letter-spacing: 0px;
	color: #999999;
}
.content .time{
  font-size: 28rpx;
  line-height: 40rpx;
	font-weight: normal;
	font-stretch: normal;
	letter-spacing: 0px;
	color: #999999;
}
.content .time text{
  color: #999999;
}
.content text{
  color: #686e98;
}
.content text.video{
  color: #6b9868
}
.content text.see{
  color: #986868;
}
.bot-con{
  width: 100%;
  height: 102rpx;
  margin-top: 47rpx;
  border-top:2rpx solid #f9f9f9;
  justify-content: flex-end;
  padding-right: 38rpx;
}
.bot-con .btn{
  padding: 0 17rpx;
  height: 56rpx;
  text-align: center;
  line-height: 56rpx;
	border-radius: 4rpx;
  	font-size: 30rpx;
	font-weight: normal;
	font-stretch: normal;
	letter-spacing: 0px;
	color: #ff775f;
	border: solid 2rpx #ff775f;
}
.bot-con .btn.active:active{
  color: #fff;
  background: #ff775f;
}
.list .tag{
  width: 109rpx;
	height: 40rpx;
  text-align: center;
  line-height: 40rpx;
	background-color: #ffa65f;
	border-radius: 8rpx;
	opacity: 0.7;
  font-size: 24rpx;
	font-weight: normal;
	font-stretch: normal;
	letter-spacing: 0px;
	color: #ffffff;
}