/* pages/mineAnswer/mineAnswer.wxss */
swiper{
  position: fixed;
  width: 100%;
  top:70rpx;
}
scroll-view{
  height: 100%;
}
.top-head{
  height: 70rpx;
  line-height: 70rpx;
  justify-content: center;
  background: #fff;
  position: fixed;
  top:0rpx;
  width: 100%;
}
.tab-btnname{
  position: relative;
  padding: 0 43rpx;
  font-size: 28rpx;
	font-weight: normal;
	font-stretch: normal;
	letter-spacing: 0px;
	color: #7f8389;
  text-align: center;
  box-sizing: content-box;
}
.tab-btnname.active{
  color: #ffb800;
}
.tab-btnname.active::after{
  content:'';
  position: absolute;
  bottom:0rpx;
  width: 120rpx;
	height: 1rpx;
  left: 50%;
  margin-left: -60rpx;
  background:#ffb800;
  border-radius: 4rpx;
	border: solid 3rpx #ffb800;
  box-sizing: border-box;
}
.center .list{
  background: #fff;
  padding: 28rpx 0rpx 35rpx;
  margin-bottom: 12rpx;
}
.top-center{
  justify-content: flex-start;
  align-items: flex-start;
  padding: 0 32rpx;
  margin: 21rpx 0 35rpx 0;
}
.top-center .tip{
  padding: 0 12rpx;
  height: 34rpx;
  text-align: center;
  line-height: 34rpx;
	background-color: #ffca41;
	border-radius: 4rpx;
  font-size: 22rpx;
	font-weight: normal;
	font-stretch: normal;
	letter-spacing: 0px;
	color: #ffffff;
  margin-right: 11rpx;
}
.title{
  line-height: 40rpx;
  font-size: 32rpx;
	font-weight: normal;
	font-stretch: normal;
	letter-spacing: 0px;
	color: #000000;
  margin-bottom: 10rpx;
}
.center .content{
  font-size: 30rpx;
  line-height: 40rpx;
	font-weight: normal;
	font-stretch: normal;
	letter-spacing: 0px;
	color: #666666;
}
.bot-con{
  width: 100%;
  height: 95rpx;
  margin-top: 34rpx;
  border-top:2rpx solid #f9f9f9;
  display: flex;
  justify-content: flex-end;
  align-items: center;
}
.bot-con .btn{
  text-align: center;
	height: 56rpx;
  background-color: #ff775f;
	border-radius: 8rpx;
  line-height: 56rpx;
  padding: 0 15rpx;
  margin-right: 56rpx;
  font-size: 30rpx;
	font-weight: normal;
	font-stretch: normal;
	letter-spacing: 0px;
	color: #ffffff;
}
.bot-con .btn.has{
  background-color: #eeeeee;
  font-size: 30rpx;
	font-weight: normal;
	font-stretch: normal;
	letter-spacing: 0px;
	color: #999999;
}
.box-con{
  background: #f5f5f5;
  width: 700rpx;
  margin: 0 auto;
  padding: 20rpx 20rpx;
  border-radius: 10rpx;
}